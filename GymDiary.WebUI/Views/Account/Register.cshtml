@model GymDiary.WebUI.ViewModels.RegisterViewModel
@using GymDiary.WebUI.ViewModels
@{
    ViewBag.Title = "Register";
}

<div class="container">
    <div class="row row-centered">
        <div class="col-md-3 col-centered">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h2 class="text-center" style="margin-bottom: 20px;">@ViewBag.Title</h2>
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "sr-only" })
                    @Html.TextBoxFor(m => m.Email,
                    new { @class = "form-control", @placeholder = "Email", @autofocus = "" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "sr-only" })
                    @Html.PasswordFor(m => m.Password,
                    new { @class = "form-control", @placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "sr-only" })
                    @Html.PasswordFor(m => m.ConfirmPassword,
                    new { @class = "form-control", @placeholder = "Confirm password" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Register" class="btn btn-primary btn-block" />
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
