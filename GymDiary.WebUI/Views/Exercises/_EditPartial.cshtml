@model GymDiary.WebUI.ViewModels.EditExerciseTypeViewModel

<div id="editSection">
    <div class="form">
        <h3 style="margin-top:0">Edit</h3>
        @Html.HiddenFor(model => model.Id, new { @id = "exerciseTypeIdEdit" })
        <div class="form-group">
            <div class="row">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.Name, new { @class = "control-label" })
                    @Html.EditorFor(model => model.Name,
                    new { htmlAttributes = new { @class = "form-control", @id = "exerciseTypeNameEdit" } })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.Description, new { @class = "control-label" })
                    @Html.TextAreaFor(model => model.Description,
                    new { @class = "form-control", @id = "exerciseTypeDescriptionEdit", @rows = "6" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">
                @Html.CheckBoxFor(model => model.IsFavorite, new { @id = "exerciseTypeIsFavoriteEdit" })
                Favorite
            </label>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    <input type="button" id="updateExerciseType" value="Save" class="btn btn-default" />
                </div>
                <div class="col-md-2">
                    <input type="button" class="btn btn-danger" value="Delete"
                           data-toggle="modal" data-target="#deleteExerciseTypeModal" />

                    <div class="modal fade" id="deleteExerciseTypeModal" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    <h4 class="modal-title">Delete exercise</h4>
                                </div>
                                <div class="modal-body">
                                    <p>Are you sure you want to delete this exercise?</p>
                                </div>
                                <div class="modal-footer">
                                    <input type="button" class="btn btn-default" value="Close" data-dismiss="modal" />
                                    <input type="button" class="btn btn-danger" value="Delete" data-dismiss="modal"
                                           id="deleteExerciseType" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <p id="editingStatus"></p>
</div>
