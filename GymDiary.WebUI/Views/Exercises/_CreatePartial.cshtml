@model GymDiary.WebUI.ViewModels.CreateExerciseTypeViewModel

<div class="form-inline">
    <div class="row">
        <div class="col-md-10">
            <div class="form-group" style="display: block">
                @Html.EditorFor(model => model.Name,
                new { htmlAttributes = new { @class = "form-control input-sm", @id = "exerciseTypeName", @placeholder = "Name", @style = "width: 100%" } })
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <input type="submit" id="createExerciseType" value="Create" class="btn btn-default btn-sm" />
            </div>
        </div>
    </div>
</div>
<p id="creationStatus"></p>
