@model GymDiary.WebUI.ViewModels.ExerciseViewModel
@using GymDiary.WebUI.Extensions
@using GymDiary.BLL.DTO
@{
    var exerciseTypeOptions = ViewBag.ExerciseTypeOptions as List<ExerciseTypeDTO>;
}
<div class="exerciseItem">
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        @Html.LabelFor(model => model.ExerciseType, new { @class = "col-md-2 control-label" })
        <div class="col-md-6">
            @Html.DropDownListFor(model => model.ExerciseType.Id,
            new SelectList(exerciseTypeOptions, "Id", "Name", exerciseTypeOptions.First().Id),
            new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group" style="margin-bottom: 0;">
        @Html.LabelFor(model => model.Sets, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <div id="setsList">
                @Html.EditorForMany(model => model.Sets, model => model.Index)
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Comment, new { @class = "col-md-2 control-label" })
        <div class="col-md-6">
            @Html.TextAreaFor(model => model.Comment, new { @class = "form-control", @rows = "3" })
            @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
</div>